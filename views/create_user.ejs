<!doctype html>
<html>
<head>
    <title>BMU : Create User</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"/>
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>Create User</h1>
        <!-- show any messages that come back with authentication -->
        <%
        if (message.length > 0)
        {
            var obj = JSON.parse(message)
        if(obj.status === 'error')
        {
        %>
        <div class="alert alert-danger"><%= obj.message %></div>
        <%
        }
        else
        {
        %>
        <div class="alert alert-success"><%= obj.message %></div>
        <%
        }
        }
        %>

        <!-- LOGIN FORM -->
        <form action="/create_user" method="post">
            <div>
                <label>Name</label>
                <input type="text" class="form-control" name="name" required>
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>
            <div>
                <label>User Type</label>
                <select class="form-control" name="type" required>
                    <option value=""></option>
                    <option value="student">Student</option>
                    <option value="faculty">Faculty</option>
                    <option value="po">Program Office</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <br>
            <button type="submit" class="btn btn-warning btn-lg">Create User</button>
        </form>
        <hr>
    </div>
</div>
</body>
</html>