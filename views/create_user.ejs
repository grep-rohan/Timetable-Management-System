<!doctype html>
<html>
<head>
    <title>BMU : <%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/public/stylesheets/bootstrap.min.css"/>
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">
            <h1>Create User</h1>
            <%
            if (message.length > 0)
            {
                var obj = JSON.parse(message)
            if(obj.status === 'error')
            {
            %>
            <div class="alert alert-danger"><%= obj.message %></div>
            <%
            }
            else
            {
            %>
            <div class="alert alert-success"><%= obj.message %></div>
            <%
            }
            }
            %>

            <!-- LOGIN FORM -->
            <form action="/create_user" method="post">
                <div>
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label>User Type</label>
                    <select class="form-control" name="type" required>
                        <option value=""></option>
                        <option value="student">Student</option>
                        <option value="faculty">Faculty</option>
                        <option value="po">Program Office</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-lg">Create User</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>